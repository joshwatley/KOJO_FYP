<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fyp_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CreateFileActivity"
            android:exported="false" />
        <activity
            android:name=".NewTaskActivity"
            android:exported="false" />
        <activity
            android:name=".MediaCenterActivity"
            android:exported="false" />
        <activity
            android:name=".PomodoroActivity"
            android:exported="false" />
        <activity android:name=".RemoveUserActivity" />
        <activity android:name=".AddUserActivity" />
        <activity android:name=".EditUsersInGroupActivity" />
        <activity android:name=".EditTaskActivity" />
        <activity android:name=".EditGroupActivity" />
        <activity android:name=".UserActivity" />
        <activity android:name=".InsideGroupActivity" />
        <activity android:name=".CreateTaskActivity" />
        <activity
            android:name=".CreateGroupActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".GroupsActivity" />
        <activity android:name=".InMessageActivity" />
        <activity android:name=".ProfileActivity" />
        <activity
            android:name=".MessagesActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme" />

        <service
            android:name=".Notifications.MyFirebaseIdService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".Notifications.MyFirebaseMessaging"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>